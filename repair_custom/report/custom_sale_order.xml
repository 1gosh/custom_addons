<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_saleorder_document_inherit_repair"
                  inherit_id="sale.report_saleorder_document">

            <!-- Hide tax header for equipment sales -->
            <xpath expr="//th[@name='th_taxes']" position="attributes">
                <attribute name="t-if">not doc._is_equipment_sale()</attribute>
            </xpath>

            <!-- Hide tax data cells for equipment sales -->
            <xpath expr="//td[@name='td_taxes']" position="attributes">
                <attribute name="t-if">not line.order_id._is_equipment_sale()</attribute>
            </xpath>

        </template>
    </data>
</odoo>
