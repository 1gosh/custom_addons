<odoo>
    <template id="repair_custom.report_repair_label">
        <t t-call="web.html_container">
            <meta charset="utf-8"/>
            <t t-foreach="docs" t-as="o">
                
                <div class="page" style="width: 68mm; margin-left: -2.5mm !important; margin-top: 0 !important; padding: 0 !important; font-family: 'Arial', sans-serif; color: #000;">
                    <div style="font-size: 8px; margin-bottom: 1mm;" t-if="o.repair_warranty == 'sar'">
                        ℹ Vu par <span style="font-weight:bold;" t-field="o.previous_technician_id.name"/> le <span t-field="o.previous_end_date" t-options='{"widget": "date"}'/>
                    </div>
                    <div t-if="o.repair_warranty != 'aucune'" style="vertical-align: bottom;">
                        <span style="right: 0; transform: scaleY(1.5); position: absolute; z-index: -1; font-weight: bold; font-size: 25mm; color: rgb(230, 230, 230);" t-field="o.repair_warranty"/>
                    </div>
                    <table style="width: 100%; table-layout: fixed; border-collapse: collapse; margin-bottom: 1mm;">
                        <tr>
                            <td style="width: 72%; vertical-align: top; overflow: hidden">
                                <div style="font-size: 19px; font-weight: 900; line-height: 0.8; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    <span t-field="o.partner_id.name"/>
                                </div>
                                <div style="font-size: 9px;">
                                    <span t-field="o.partner_id.phone"/>
                                </div>
                            </td>
                            
                            <td style="width: 28%; text-align: right; vertical-align: top; white-space: nowrap;">
                                <div style="font-size: 27px; font-weight: 900; letter-spacing: -1px; line-height: 0.8;" t-field="o.entry_date" t-options='{"widget": "date", "format": "dd/MM"}'/>
                            </td>
                        </tr>
                    </table>

                    <table style="width: 100%; table-layout: fixed; border-collapse: collapse;">
                        <tr>
                            <td style="width: 45%; vertical-align: top;">
                                
                                <div style="line-height: 0.9; font-size: 14px; font-weight: bold; word-wrap: break-word;">
                                        <span t-field="o.device_id_name"/>
                                </div>
                                <table style="width: 100%; border-collapse: collapse; margin: 0; margin-top:1mm; padding: 0;">
                                    <tr>
                                        <td style="vertical-align: middle; padding: 0;">
                                            <div style="font-size:8px; overflow: hidden; white-space: nowrap;">
                                                <a>S/N: </a><span t-field="o.serial_number"/>
                                            </div>
                                            <div style="font-size:8px; overflow: hidden; white-space: nowrap;">
                                                <a>Réf: </a><span t-field="o.name"/>
                                            </div>
                                        </td>
                                        <!-- <td style="vertical-align: middle; text-align: right; white-space: nowrap;">
                                            <t t-if="o.repair_warranty != 'aucune'">
                                                <span style="background-color: #000; color: #fff; font-size: 12px; font-weight: bold; padding: 0 2px; margin-right: 1px;">
                                                    <span t-field="o.repair_warranty"/>
                                                </span>
                                            </t>
                                        </td> -->
                                    </tr>
                                </table>
                                <div style="font-size: 8px; margin-top:1mm; padding: 0;">
                                    <t t-if="o.notes">
                                        <i><span t-field="o.notes"/></i>
                                    </t>
                                </div>
                            </td>

                            <td style="width: 55%; vertical-align: top;">
                                <div t-if="o.quote_required" style="margin-bottom: 1mm; font-weight: bold; font-size: 10px; border: 1px solid black; padding: 1px; text-align: center;">
                                    <t t-if="o.quote_threshold > 0">
                                        Devis &gt; <span t-field="o.quote_threshold" 
                                                        t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                    </t>    
                                    <t t-else="">
                                        Devis Exigé
                                    </t>
                                </div>
                                <div style="font-size: 12px; margin-top: -1px; margin-left: 2mm; word-wrap: break-word; line-height: 1;">
                                    <t t-foreach="o.tag_ids" t-as="tag">
                                        - <span t-field="tag.name"/><br/>
                                    </t>
                                    <span t-if="not o.tag_ids" style="font-style: italic; font-weight: normal; font-size: 10px;">RAS</span>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>