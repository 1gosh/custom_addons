<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_custom" model="ir.ui.view">
        <field name="name">res.partner.form.custom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- Remove company association from header -->
            <xpath expr="//div[@class='o_row']" position="replace"/>

            <!-- Replace the two-column group structure -->
            <xpath expr="//group[group[span[@name='address_name']]]" position="replace">
                <group>
                    <!-- Left column: Contact information -->
                    <group>
                        <field name="phone" widget="phone"/>
                        <field name="mobile" widget="phone" invisible="not is_company"/>
                        <field name="user_ids" invisible="1"/>
                        <field name="email" widget="email" context="{'gravatar_image': True}" required="user_ids"/>
                        <field name="website" string="Website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                        <field name="title" options='{"no_open": True}' placeholder="e.g. Mister"
                            invisible="is_company"/>
                        <field name="active_lang_count" invisible="1"/>
                        <field name="lang" invisible="active_lang_count &lt;= 1"/>
                    </group>

                    <!-- Right column: Address and company association -->
                    <group>
                        <span class="o_form_label o_td_label" name="address_name">
                            <field name="type" invisible="is_company" readonly="user_ids" required="not is_company" class="fw-bold"/>
                        </span>
                        <div class="o_address_format" name="div_address">
                            <field name="child_ids" invisible="1"/>
                            <!-- Dummy fields + classes to allow the
                            fields view to generate the modification
                            tracker (aka mailtracker)  -->
                            <field name="street" placeholder="Street..." class="o_address_street" readonly="parent_id"/>
                            <field name="street2" placeholder="Street 2..." class="o_address_street" readonly="parent_id"/>
                            <field name="city" placeholder="City" class="o_address_city" readonly="parent_id"/>
                            <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True, "no_quick_create": True}' readonly="parent_id"/>
                            <field name="zip" placeholder="ZIP" class="o_address_zip" readonly="parent_id"/>
                            <div name="partner_address_country" class="d-flex justify-content-between">
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' readonly="parent_id"/>
                                <a name="open_parent" type="object" class="btn btn-link" invisible="not parent_id or not parent_id.is_company">
                                    <field name="parent_name" readonly="1" class="oe_inline fst-italic" nolabel="1"/>
                                </a>
                            </div>
                        </div>
                        <field name="vat" placeholder="e.g. BE0477472701" readonly="parent_id"/>
                        <field name="category_id" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"
                               placeholder='e.g. "B2B", "VIP", "Consulting", ...'/>
                        <field name="parent_id"
                            widget="res_partner_many2one"
                            placeholder="Company Name..."
                            domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'show_vat': True, 'default_user_id': user_id}"
                            invisible="((is_company and not parent_id) or company_name) and company_name != ''"/>
                            <field name="company_name" invisible="not company_name or company_name == '' or is_company"/>
                            <button name="create_company" icon="fa-plus-square" string="Create company"
                                type="object" class="oe_edit_only btn-link"
                                invisible="is_company or company_name == '' or not company_name"/>
                        <field name="function" placeholder="e.g. Sales Director"
                            invisible="not parent_id or is_company"/>
                    </group>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
