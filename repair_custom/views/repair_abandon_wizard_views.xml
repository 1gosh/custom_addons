<odoo>
    <record id="view_repair_abandon_wizard_form" model="ir.ui.view">
        <field name="name">repair.abandon.wizard.form</field>
        <field name="model">repair.abandon.wizard</field>
        <field name="arch" type="xml">
            <form string="Abandon &amp; Mise en Stocks">
                <sheet>
                    <div class="alert alert-warning" role="alert">
                        L'appareil va devenir la propriété de l'atelier.<br/>
                        Veuillez choisir où le stocker.
                    </div>
                    <group>
                        <field name="repair_id" invisible="1"/>
                        <field name="location_dest_id" options="{'no_create': True}"/>
                        <field name="note" placeholder="Raison de l'abandon, état de l'appareil..."/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm_abandon" string="Valider l'Entrée en Stock" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>