<odoo>
    <template id="report_repair_entry_ticket">
        <t t-call="web.html_container">
            <meta charset="utf-8"/>
            <t t-foreach="docs" t-as="o">
                
                <t t-set="is_batch" t-value="o._name == 'repair.batch'"/>
                
                <t t-set="repairs_to_print" t-value="o.repair_ids if is_batch else [o]"/>
                
                <t t-set="main_info" t-value="repairs_to_print[0]"/>

                <div class="page" style="width: 100%; margin-top: 0; padding: 0; font-size: 13px; font-family: 'Arial', sans-serif; color: #000; line-height: 1.2;">
                    
                    <div style="text-align: center; margin-bottom: 3mm;">
                        <img t-if="main_info.company_id.logo" t-att-src="image_data_uri(main_info.company_id.logo)" alt="Logo" style="max-height: 14mm; display: block; margin: 0 auto;"/>
                        <div style="font-size: 10px;">
                            <div style="margin-top: 4mm; margin-bottom: 2mm;"><a>Le</a> <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/></div>
                            <t t-esc="main_info.pickup_location_id.street"/>, <t t-esc="main_info.pickup_location_id.zip"/> <t t-esc="main_info.pickup_location_id.city"/>
                            <br/>
                            Tél: <t t-esc="main_info.pickup_location_id.contact_id.phone or 'N/A'"/>
                            <br/>
                            infos@hifivintage.eu | www.hifivintage.eu
                        </div>
                    </div>

                    <div style="text-align: center; margin-bottom: 2mm;">
                        <div style="font-weight: bold; border: 1px solid #000; padding: 2px;">
                            <span t-if="is_batch">DOSSIER DE DÉPÔT</span>
                            <span t-else="">BON DE PRISE EN CHARGE</span>
                        </div>
                    </div>

                    <div style="margin-bottom: 2mm;">
                        <span style="font-weight: bold;" t-field="main_info.partner_id.name"/>
                        <div style="font-size: 11px;" t-if="main_info.partner_id.phone">Tél: <span t-field="main_info.partner_id.phone"/></div>
                        <div style="font-size: 11px;" t-if="main_info.partner_id.email">E-mail: <span t-field="main_info.partner_id.email"/></div>
                    </div>

                    <div style="border-bottom: 1px solid #000; margin: 2mm 0;"></div>

                    <t t-foreach="repairs_to_print" t-as="repair">
                        
                        <div style="margin-bottom: 2mm;">
                            <div style="margin-bottom: 2mm;">
                                <span t-field="repair.device_id_name" style="font-weight: bold;"/>
                                <br/>
                                <span style="font-size: 11px;">N° de série: <span t-field="repair.serial_number"/></span>
                                <span t-if="is_batch" style="font-size: 10px; float: right;" t-field="repair.name"/>
                            </div>
                            
                            <div style="font-size: 11px;">
                                <a>Pannes: </a>
                                <span style="font-size: 11px;">
                                    <t t-foreach="repair.tag_ids" t-as="tag">
                                        <span t-field="tag.name"/><span t-if="not tag_last">, </span>
                                    </t>
                                </span>
                            </div>

                            <t t-if="repair.notes">
                                <div style="font-size: 11px;">
                                    Note: <span t-field="repair.notes"/>
                                </div>
                            </t>

                            <t t-if="repair.repair_warranty != 'aucune'">
                                <div style="font-size: 10px; font-weight: bold; margin-top: 1px;">
                                    [ GARANTIE : <span t-field="repair.repair_warranty"/> ]
                                </div>
                            </t>
                            
                            <div t-if="not repair_last" style="border-bottom: 1px dashed #000; margin: 2mm 0;"></div>
                        </div>
                    </t>

                    <div style="text-align: center; margin-top: 4mm;">
                        <div style="width: 100%; margin: 0 auto;">
                            <span t-field="o.name" 
                                  t-options='{"widget": "barcode", "symbology": "Code128", "width": 1000, "height": 100, "img_style": "width:100%; height:12mm;"}'/>
                        </div>
                        <span style="font-size: 9px;" t-field="o.name"/>
                        <br/>
                    </div>
                    
                    <div style="text-align: center; font-size: 9px; margin-top: 3mm;">
                        Merci de votre confiance.<br/>
                        www.hifivintage.eu
                    </div>
                    <div style="margin-top: 4mm; width: 100%; font-size: 5px;">.</div>
                </div>
            </t>
        </t>
    </template>
</odoo>