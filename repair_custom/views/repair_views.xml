<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="repair_order_view_activity" model="ir.ui.view">
        <field name="name">repair.order.view.activity</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <activity string="Activity view">
                <templates>
                    <div t-name="activity-box">
                        <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                        <div>
                            <field name="name" display="full" class="o_text_block o_text_bold"/>
                            <!-- <field name="product_id" class="o_text_block"/> -->
                            <!-- <field name="schedule_date" widget="date" class="d-block"/> -->
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>
    
    <record id="view_repair_batch_tree" model="ir.ui.view">
        <field name="name">repair.batch.tree</field>
        <field name="model">repair.batch</field>
        <field name="arch" type="xml">
            <tree string="Dossiers de Dépôt" sample="1" decoration-info="state == 'draft'" decoration-muted="state == 'processed'" multi_edit="1">
                <field name="state" 
                   widget="badge" 
                   decoration-muted="state == 'draft'" 
                   decoration-info="state == 'confirmed'" 
                   decoration-warning="state == 'under_repair'" 
                   decoration-success="state == 'processed'"/>
                
                <field name="name" decoration-bf="1" string="Référence"/>
                <field name="date" widget="datetime" options="{'show_time':false}"/>
                <field name="partner_id" widget="res_partner_many2one"/>
                
                <field name="repair_count" string="Nb Appareils"/>
            </tree>
        </field>
    </record>

    <record id="view_repair_batch_search" model="ir.ui.view">
        <field name="name">repair.batch.search</field>
        <field name="model">repair.batch</field>
        <field name="arch" type="xml">
            <search string="Recherche Dossier">
                <field name="name" string="Dossier"/>
                <field name="partner_id"/>
                
                <filter string="Brouillons" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Traités" name="filter_processed" domain="[('state', '=', 'processed')]"/>
                <separator/>
                <filter string="Date de dépôt" name="filter_date" date="date"/>
                
                <group expand="0" string="Grouper par">
                    <filter string="Client" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_repair_batch_form" model="ir.ui.view">
        <field name="name">repair.batch.form</field>
        <field name="model">repair.batch</field>
        <field name="arch" type="xml">
            <form string="Dossier de Prise en Charge">
                <header>
                    <button name="%(action_repair_pricing_wizard)d" icon="fa-file" string="Devis/Facture" type="action" invisible="state in 'draft'"/>
                    
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_repair_order_tree)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-wrench"
                                context="{'search_default_batch_id': id}">
                            <field name="repair_count" widget="statinfo" string="Réparations"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="partner_id" readonly="1" widget="res_partner_many2one_context"/>
                        <field name="date" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Appareils">
                            <field name="repair_ids" context="{'tree_view_ref': 'repair_custom.view_repair_order_tree'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_repair_batch" model="ir.actions.act_window">
        <field name="name">Dossiers de Dépôt</field>
        <field name="res_model">repair.batch</field>
        <field name="view_mode">tree,form</field> <field name="search_view_id" ref="view_repair_batch_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez un nouveau dossier de prise en charge groupée.
            </p>
        </field>
    </record>

    <record id="view_repair_order_tree" model="ir.ui.view">
        <field name="name">repair.tree</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <tree string="Repairs order" multi_edit="1" sample="1" decoration-info="state in 'draft'">
                <field name="priority" optional="show" widget="priority" nolabel="1" />
                <field name="entry_date" optional="show" string="Date d'entrée" readonly="True"
                    width="50" widget="datetime" options="{'show_time':false}" />
                <field name="state" optional="show" widget="badge" decoration-success="state in 'done'"
                    decoration-info="state in 'confirmed'" decoration-warning="state in 'under_repair'"
                    decoration-danger="state in 'cancel'" decoration-muted="state in 'draft'" readonly="True"
                    width="50" on_change="1" />
                <field name="device_id_name" optional="show"/>
                <field name="partner_id" readonly="1" optional="show" string="Client" width="100" on_change="1" />
                <field name="repair_warranty" optional="show" readonly="True" />
                <field name="pickup_location_id" optional="hide" readonly="True" />
                <field name="technician_employee_id" optional="show"/>
                <field name="notes" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_repair_order_form" model="ir.ui.view">
        <field name="name">repair.form</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <form string="Ordre de réparation">
                <field name="company_id" invisible="1"/>
                <field name="sale_order_id" invisible="1"/>
                <field name="technician_user_id" force_save="1" readonly="1" invisible="1"/>
                <field name="variant_ids_available" invisible="1"/>
                <field name="show_unit_field" invisible="1"/>
                <field name="device_id" invisible="1"/>
                <field name="category_id" invisible="1"/>
                <header>
                    <button name="action_validate" groups="repair_custom.group_repair_manager" invisible="state not in 'draft'" type="object" string="Confirmer la réparation" class="oe_highlight" data-hotkey="v"/>
                    <button name="action_repair_start" invisible="state not in 'confirmed'" type="object" string="Commencer" class="oe_highlight" data-hotkey="q"/>
                    <button name="action_repair_end" invisible="state not in 'under_repair'" type="object" string="Terminer la réparation" class="btn-success" data-hotkey="x"/>
                    <button name="action_repair_cancel" groups="repair_custom.group_repair_manager" string="Annuler" type="object" invisible="state in ('done', 'cancel')" data-hotkey="l" class="btn-danger"/>
                    <button name="action_repair_cancel_draft" groups="repair_custom.group_repair_manager" invisible="state in 'draft'" string="Marquer comme brouillon" type="object" data-hotkey="z"/>
                    <button name="action_open_unit" string="Voir l’appareil" type="object" icon="fa-external-link" invisible="not unit_id" class="btn-primary"/>
                    <button name="action_print_repair_order" string="Bon" type="object" icon="fa-regular fa-print" invisible="state in 'draft'" class="btn-info"/>
                    <button name="%(action_report_repair_label)d" string="Etiquette" type="action" icon="fa-regular fa-print" invisible="state in 'draft'" class="btn-info"/>
                    <button name="action_open_pricing_wizard" icon="fa-file" invisible="state in 'draft'" string="Devis/Facture" type="object"/>
                    <button name="action_add_device_to_batch" string="Ajouter appareil" type="object" class="btn-secondary" icon="fa-plus-square" invisible="state not in 'confirmed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,under_repair,done" on_change="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sale_order"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                invisible="sale_order_count == 0">
                            <field name="sale_order_count" widget="statinfo" string="Devis / BC"/>
                        </button>
                        <button name="action_view_invoices"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text-o"
                                invisible="invoice_count == 0">
                            <field name="invoice_count" widget="statinfo" string="Factures"/>
                        </button>
                        <button name="action_view_batch_repairs"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-folder-open"
                            invisible="batch_count == 0">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value"><field name="batch_count"/></span>
                            <span class="o_stat_text">Autre(s)</span>
                        </div>
                    </button>
                    </div>
                    <div class="oe_title">
                        <h4 invisible="not batch_id" class="text-muted">
                            <i class="fa fa-folder-open"/> Dossier : <field name="batch_id" readonly="1" class="oe_inline"/>
                        </h4>
                        <label class="o_form_label" invisible="unit_id" for="entry_date"/>
                        <field name="entry_date" invisible="not unit_id" class="o_form_label" string="Date d'entrée" widget="datetime" options="{'show_time':false}" readonly="state not in 'draft'" />
                        <h1 class="d-flex">
                            <!-- <field name="priority" widget="priority" class="me-3"/> -->
                            <field name="device_id_name" invisible="not unit_id" readonly="1"/>
                            <field name="entry_date" invisible="unit_id" string="Date d'entrée" widget="datetime" options="{'show_time':false}" readonly="state not in 'draft'" />
                            <!-- <field name="device_picture" widget="image" class="ml-3 mb-5 h4"
                                options="{'convert_to_webp':true,'zoom':true,'size':[0,90]}"
                                invisible="not device_picture and state not in 'draft'" /> -->
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field class="partner_custom" name="partner_id"
                                widget="res_partner_many2one"
                                context="{'res_partner_search_mode': 'customer', 'show_email': True, 'show_phone': True}"
                                readonly="state not in 'draft' or batch_id"
                                force_save="1"
                                options="{'no_quick_create':True}"
                                required="True"/>
                            <field name="quote_required" readonly="state not in 'draft' or batch_id"/>
                        </group>
                        <group>
                            <field name="repair_warranty" widget="radio" options="{'horizontal': True}" readonly="state not in 'draft'"/>
                            <field name="pickup_location_id" placeholder="Sélectionner un lieu..." readonly="state not in 'draft' or batch_id"/>
                        </group>
                    </group>
                    <!-- <p class="text-muted small">
                        Réf. 
                    </p> -->
                    <notebook>
                        <page string="Appareil" groups="repair_custom.group_repair_manager">
                            <group>
                                <group>
                                    <field name="unit_id"
                                        domain="[('partner_id', '=', partner_id)]"
                                        options="{'no_create': True, 'no_open': True}"
                                        invisible="not show_unit_field"
                                        readonly="state not in 'draft'"/>
                                    <field name="category_id" readonly="state not in 'draft' or unit_id" force_save="1"/>
                                    <label for="device_id"/>
                                    <div class="o_row">
                                        <field name="device_id" 
                                            required="True"
                                            options="{'no_quick_create':True}"
                                            readonly="state not in 'draft' or unit_id"
                                            force_save="1"
                                            domain="category_id and [('category_id', 'child_of', category_id)] or []"
                                            context="{'default_category_id': category_id, 'default_brand_id': False}"/>
                                        <!-- <button invisible="state not in 'draft'" name="action_create_device" icon="fa-plus-circle" class="oe_link pt-0" type="object" string="Créer un appareil"/> -->
                                    </div>
                                    <field name="variant_id"
                                        domain="[('id','in', variant_ids_available)]"
                                        context="{'default_device_id': device_id}"
                                        readonly="state not in 'draft' or unit_id"
                                        force_save="1"
                                        placeholder="Sélectionner une variante (optionnel)"
                                        invisible ="(not device_id) or (not variant_id and (state not in 'draft'))"/>
                                    <field name="serial_number" 
                                        placeholder="Numéro de série (ou laisser vide pour auto)" 
                                        readonly="state not in 'draft' or unit_id" 
                                        force_save="1" 
                                        invisible ="not device_id"/>
                                </group>
                                <group>
                                    <field name="tag_ids"   
                                        widget="many2many_tags"
                                        options="{'color_field': 'color'}"
                                        placeholder="Entrer les pannes"
                                        readonly="state not in 'draft'"
                                        domain="category_id and ['|', '|', ('category_ids', '=', False), ('category_ids', 'parent_of', category_id), ('category_ids', 'child_of', category_id)] or [('category_ids', '=', False)]"
                                        context="{'default_category_ids': [category_id]}"
                                        required="True"
                                        string="Pannes"
                                        can_create="True"
                                        can_write="True"/>
                                    <field name="notes" required="False" placeholder="Écrire ici ..." string="Notes"/>
                                </group>
                            </group>
                        </page>
                        <page string="Atelier">
                            <group>
                                <group>
                                    <field name="notes_template_id" 
                                        domain="['|', ('category_ids', '=', False), ('category_ids', 'parent_of', category_id)]" 
                                        placeholder="Ex: Protocole Ampli Vintage"/>
                                    <field name="internal_notes" 
                                        placeholder=""
                                        style="background: #faf6de; font-family: monospace; padding: 10px; border: 1px solid #ccc; min-height: 150px;"/>
                                </group>
                                <group>
                                    <field name="unit_id"
                                            invisible="not unit_id"
                                            readonly="1"/>
                                    <field name="technician_employee_id" 
                                        readonly="1" 
                                        groups="!repair_custom.group_repair_manager" 
                                        options="{'no_open':True}"
                                        invisible="not technician_employee_id"/>

                                    <field name="technician_employee_id" 
                                        readonly="0" 
                                        groups="repair_custom.group_repair_manager"
                                        invisible="not technician_employee_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_repair_kanban" model="ir.ui.view">
        <field name="name">repair.kanban</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" quick_create="false">
                <field name="company_id" invisible="1"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="activity_state"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-6">
                                    <strong><field name="entry_date" widget="datetime" options="{'show_time':false}"/></strong>
                                </div>
                                <div class="col-6 text-end">
                                    <field name="state" widget="label_selection" options="{'classes': {'draft': 'info', 'cancel': 'danger', 'done': 'success', 'under_repair': 'secondary'}}"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <field name="partner_id"/>
                                </div>
                                <div class="col-6">
                                    <span class="float-end">
                                        <field name="device_id_name"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_repair_order_form_filter" model="ir.ui.view">
        <field name="name">repair.select</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <search string="Search Repair Orders">
                <field name="name" string="Recherche Globale" 
                       filter_domain="['|', '|', '|',
                            ('name', 'ilike', self), 
                            ('partner_id', 'ilike', self), 
                            ('device_id', 'ilike', self), 
                            ('serial_number', 'ilike', self)]"/>
                <field name="serial_number"/>
                <filter string="New" domain="[('state', '=', 'draft')]" name="filter_draft" />
                <filter string="Confirmed" domain="[('state', '=', 'confirmed')]" name="filter_confirmed" />
                <filter string="Under Repair" name="filter_under_repair" domain="[('state', '=', 'under_repair')]"/>
                <filter string="Repaired" name="filter_done" domain="[('state', '=', 'done')]"/>
                <filter string="Cancelled" name="filter_cancel" domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <filter string="Ready" name="ready" domain="[('state', 'in', 'confirmed')]" invisible="True"/>
                <filter name="filter_create_date" date="create_date"/>
                <group expand="0" string="Regrouper par">
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Technicien" name="group_tech" context="{'group_by': 'technician_employee_id'}"/>
                    <filter string="Client" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Mois d'entrée" name="group_date" context="{'group_by': 'entry_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_repair_graph" model="ir.ui.view">
        <field name="name">repair.graph</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <graph string="Repair Orders" sample="1">
                <field name="create_date"/>
                <!-- <field name="product_id"/> -->
            </graph>
        </field>
    </record>

    <record id="view_repair_pivot" model="ir.ui.view">
        <field name="name">repair.pivot</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <pivot string="Repair Orders" sample="1">
                <field name="create_date" type="row"/>
                <!-- <field name="product_id" type="col"/> -->
            </pivot>
        </field>
    </record>

    <record id="view_repair_order_calendar" model="ir.ui.view">
        <field name="name">repair.order.calendar</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <calendar string="Calendrier Atelier"
                      date_start="entry_date"
                      color="technician_employee_id"
                      mode="month">
                
                <field name="partner_id"/>
                <field name="device_id_name"/>
                
                <field name="technician_employee_id" filters="1"/>
                <field name="state" filters="1"/>
            </calendar>
        </field>
    </record>

    <record id="action_repair_order_form" model="ir.actions.act_window">
        <field name="name">Repair Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">repair.order</field>
        <field name="view_mode">form</field>
    </record>

    <record id="action_repair_order_tree" model="ir.actions.act_window">
        <field name="name">Repair Orders</field>
        <field name="res_model">repair.order</field>
        <field name="view_mode">tree,kanban,graph,calendar,pivot,form,activity</field>
        <field name="search_view_id" ref="view_repair_order_form_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            No repair order found. Let's create one!
            </p><p>
            In a repair order, you can detail the components you remove,
            add or replace and record the time you spent on the different
            operations.
            </p>
        </field>
        <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('view_repair_order_tree')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('view_repair_order_form')}),
        (0, 0, {'view_mode': 'calendar', 'view_id': ref('view_repair_order_calendar')})]"/>
    </record>

    <record id="action_repair_order_graph" model="ir.actions.act_window">
        <field name="name">Repair Orders</field>
        <field name="context">{
            'search_default_product': 1,
            'search_default_createDate': 1,
        }
        </field>
        <field name="res_model">repair.order</field>
        <field name="view_mode">tree,kanban,graph,pivot,form</field>
        <field name="view_id" ref="view_repair_graph"/>
    </record>

    <record id="view_repair_tag_form" model="ir.ui.view">
        <field name="name">repair.tag.form</field>
        <field name="model">repair.tags</field>
        <field name="arch" type="xml">
            <form string="Pannes">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="is_global" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="category_ids" widget="many2many_tags" 
                                invisible="is_global" 
                                options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_repair_tag_tree" model="ir.ui.view">
        <field name="name">repair.tag.tree</field>
        <field name="model">repair.tags</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_ids"/>
            </tree>
        </field>
    </record>

    <record id="view_repair_tag_search" model="ir.ui.view">
        <field name="name">repair.tag.search</field>
        <field name="model">repair.tags</field>
        <field name="arch" type="xml">
            <search string="Tags">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_repair_order_tag" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">repair.tags</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Créer une panne type
            </p>
        </field>
    </record>

    <record id="action_repair_pickup_location" model="ir.actions.act_window">
        <field name="name">Lieux de prise en charge</field>
        <field name="res_model">repair.pickup.location</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau lieu
            </p>
        </field>
    </record>

    <record id="view_repair_pickup_location_tree" model="ir.ui.view">
        <field name="name">repair.pickup.location.tree</field>
        <field name="model">repair.pickup.location</field>
        <field name="arch" type="xml">
            <tree string="Lieux de prise en charge">
                <field name="name"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="view_repair_pickup_location_form" model="ir.ui.view">
        <field name="name">repair.pickup.location.form</field>
        <field name="model">repair.pickup.location</field>
        <field name="arch" type="xml">
            <form string="Lieu de prise en charge">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>

                    <group>
                        <group string="Adresse">
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="zip" placeholder="Code postal"/>
                            <field name="city" placeholder="Ville"/>
                            <field name="country_id"/>
                        </group>

                        <group string="Informations supplémentaires">
                            <field name="contact_id"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_repair_order_atelier_tree" model="ir.ui.view">
        <field name="name">repair.atelier.tree</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <tree string="Atelier" 
                  decoration-danger="priority == '1'"
                  decoration-warning="quote_required == True"
                  decoration-info="parts_waiting == True"
                  sample="1">
                <field name="state" optional="hide"/>
                <field name="technician_employee_id" optional="hide"/>
                <button name="action_atelier_start" string="Prendre" type="object" icon="fa-hand-paper-o" invisible="state != 'confirmed' or technician_employee_id or quote_required"/>
                <field name="priority" widget="priority" optional="hide"/>
                <field name="entry_date" optional="show" string="Date d'entrée" readonly="True"
                    width="50" widget="datetime" options="{'show_time':false}" />
                <field name="device_id_name" string="Appareil"/>
                <field name="serial_number" optional="show"/>
                <field name="partner_id" widget="many2one_avatar"/>
                
                <field name="quote_required" optional="show"/>
                <field name="parts_waiting" optional="hide"/>

                <field name="name" string="Réf."/>
            </tree>
        </field>
    </record>

    <record id="view_repair_order_atelier_history_tree" model="ir.ui.view">
        <field name="name">repair.atelier.history.tree</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair_custom.view_repair_order_atelier_tree"/>
        <field name="mode">primary</field> 
        <field name="arch" type="xml">
            
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">write_date desc</attribute>
            </xpath>

            <field name="entry_date" position="after">
                <field name="last_action_time" string="Modifié" decoration-bf="1" optional="show"/>
            </field>

        </field>
    </record>

    <record id="view_repair_order_atelier_search" model="ir.ui.view">
        <field name="name">repair.atelier.search</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <search string="Recherche Atelier">
                <field name="name" string="Recherche Globale" 
                       filter_domain="['|', '|', '|',
                            ('name', 'ilike', self), 
                            ('partner_id', 'ilike', self), 
                            ('device_id', 'ilike', self), 
                            ('serial_number', 'ilike', self)]"/>
                <field name="partner_id"/>  

                <filter string="Ma Session" name="my_session" domain="[('technician_employee_id', '=', context.get('atelier_employee_id'))]"/>
                
                <separator/>
                
                    <filter string="À Faire" name="todo" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="En Cours" name="in_progress" domain="[('state', '=', 'under_repair')]"/>
                    <filter string="Attente Pièces" name="parts" domain="[('parts_waiting', '=', True)]"/>
                    <filter string="Devis en attente" name="quote_waiting" domain="[('state', '=', 'quotation_pending')]"/>
                    <filter string="Devis validé" name="quote_validated" domain="[('state', '=', 'quotation_approved')]"/>
                
                <separator/>

                    <filter string="Urgent" name="urgent" domain="[('priority', '=', '1')]"/>
                    <filter string="Terminé" name="done" domain="[('state', '=', 'done')]"/>
                
                <group expand="0" string="Regrouper par">
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Technicien" name="group_tech" context="{'group_by': 'technician_employee_id'}"/>
                    <filter string="Catégorie" name="group_categ" context="{'group_by': 'category_id'}"/>
                </group>

                <searchpanel>
                    <field name="priority" icon="fa-star" select="multi" string="Priorité"/>
                    <field name="category_id" icon="fa-folder" select="multi" string="Catégorie"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_repair_order_atelier_form" model="ir.ui.view">
        <field name="name">repair.atelier.form</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <form string="Fiche Atelier">
                <header>
                    <button name="action_atelier_start" string="Commencer" type="object" class="oe_highlight" invisible="not ( (state == 'confirmed' and not quote_required) or state == 'quotation_approved' )"/>
                    <button name="action_atelier_request_quote" string="Établir le devis" type="object" class="btn-warning" invisible="state not in 'confirmed'"/>
                    <button name="action_manager_validate_quote" string="Valider le devis" type="object" class="btn-success" groups="repair_custom.group_repair_manager" invisible="state != 'quotation_pending'"/>
                    <button name="action_atelier_parts_toggle" string="Commande de pièces" type="object" class="btn-secondary" invisible="state != 'under_repair' or parts_waiting"/>
                    <button name="action_atelier_parts_toggle" string="Pièces reçues" type="object" class="btn-primary" invisible="state != 'under_repair' or not parts_waiting"/>
                    <button name="action_atelier_finish" string="Terminer" type="object" class="btn-success" invisible="state != 'under_repair'"/>

                    <field name="state" widget="statusbar" statusbar_visible="confirmed,under_repair,done"/>

                    <field name="quote_required" invisible="1"/>
                    <field name="parts_waiting" invisible="1"/>
                </header>

                <sheet>
                    <widget name="web_ribbon" title="Terminé" bg_color="bg-success" invisible="state != 'done'"/>
                    <widget name="web_ribbon" title="En Attente Devis" bg_color="bg-warning" invisible="state != 'quotation_pending'"/>
                    <widget name="web_ribbon" title="Attente Pièces" bg_color="bg-info" invisible="not parts_waiting"/>

                    <div class="oe_title">
                        <field name="entry_date" class="o_form_label" string="Date d'entrée" widget="datetime" options="{'show_time':false}" readonly="state not in 'draft'" />
                        <h1 class="d-flex">
                            <field name="priority" widget="priority" class="me-2" readonly="1"/>
                            <field name="unit_id" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="partner_id" widget="res_partner_many2one_avatar" readonly="1" options="{'no_open': True}"/>
                            <field name="tag_ids" string="Pannes" widget="many2many_tags" options="{'color_field': 'color'}" readonly="1"/>
                        </group>
                        <group>
                            <field name="technician_employee_id" invisible="not technician_employee_id" widget="many2one_avatar_employee" readonly="1"/>
                            <field name="notes" invisible="not notes" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <separator string="Notes techniques / Travail effectué"/>
                            <field nolabel="1" colspan="2" name="internal_notes" style="background: #f0f0f0; font-family: monospace; padding: 10px; border: 1px solid #ccc; min-height: 150px;"/> 
                        </group>
                        <group invisible="not quote_required or not quotation_notes">
                            <separator string="Diagnostic &amp; Estimation"/>
                            <field name="quotation_notes" readonly="1" nolabel="1" colspan="2" style="min-height: 100px; min-width: 300px;"/>
                        </group>
                    </group>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_repair_finish_wizard" model="ir.ui.view">
        <field name="name">repair.finish.wizard.form</field>
        <field name="model">repair.finish.wizard</field>
        <field name="arch" type="xml">
            <form string="Travail terminé ?">
                <group>
                    <field name="template_id" options="{'no_create': True, 'no_open': True}"/>
                    <field name="work_summary" placeholder="Ex: Remplacement condo C4, bias ajusté à 25mV..." style="background: #f0f0f0; font-family: monospace; padding: 10px; border: 1px solid #ccc; min-height: 150px;"/>
                </group>
                <footer>
                    <button name="action_terminate" string="Clôturer la réparation" type="object" class="btn-success" data-hotkey="q"/>
                    <button string="Annuler" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_repair_quotation_wizard" model="ir.ui.view">
        <field name="name">repair.quotation.wizard.form</field>
        <field name="model">repair.quotation.wizard</field>
        <field name="arch" type="xml">
            <form string="Demande de Devis">
                <p class="text-muted">
                    Veuillez indiquer ci-dessous les éléments nécessaires pour le chiffrage (Pièces à commander, temps estimé...).
                </p>
                <group>
                    <field name="quotation_notes" 
                           placeholder="Ex: Transformateur HS + 2h de Main d'oeuvre..." 
                           style="height: 150px"/>
                </group>
                <footer>
                    <button name="action_confirm_request" string="Envoyer" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Annuler" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_repair_order_atelier" model="ir.actions.act_window">
        <field name="name">Tableau de Bord Atelier</field>
        <field name="res_model">repair.order</field>
        <field name="view_mode">tree,form,calendar</field>
