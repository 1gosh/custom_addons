<odoo>
    <record id="action_report_repair_ticket" model="ir.actions.report">
        <field name="name">Bon de Prise en Charge</field>
        <field name="model">repair.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">repair_custom.report_repair_entry_ticket</field>
        <field name="report_file">repair_custom.report_repair_entry_ticket</field>
        <field name="paperformat_id" ref="repair_custom.paperformat_receipt_80mm"/>
        <field name="binding_model_id" ref="model_repair_order"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_repair_entry_ticket">
        <t t-call="web.html_container">
            <meta charset="utf-8"/>
            <t t-foreach="docs" t-as="o">
                <div class="page" style="width: 74mm; margin: 0 auto; padding: 3mm; font-size: 14px; font-family: 'Arial', sans-serif; color: #000;">
                    
                    <div style="text-align: center; margin-bottom: 5mm;">
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="max-height: 10mm; display: block; margin: 0 auto;"/>
                        <br/>
                        <strong style="font-size: 12px;">BON DE PRISE EN CHARGE</strong>
                        <div style="font-size: 10px; margin-top: 2mm;">
                            <t t-esc="o.pickup_location_id.street"/>, <t t-esc="o.pickup_location_id.zip"/> <t t-esc="o.pickup_location_id.city"/>
                            <br/>
                            Tél: <t t-esc="o.pickup_location_id.contact_id.phone or 'N/A'"/>
                            <br/>
                            infos@hifivintage.eu | www.hifivintage.eu
                        </div>
                    </div>
                    
                    <hr style="border-top: 1px dashed #000;"/>

                    <div style="text-align: center; margin-bottom: 3mm; font-size: 14px; font-weight: bold;">
                        DOSSIER N° <span t-field="o.name"/>
                    </div>
                    <div style="text-align: center; margin-bottom: 5mm; font-size: 10px;">
                        Date d'entrée : <t t-esc="o.create_date.strftime('%d/%m/%y')"/>
                    </div>
                    
                    <hr style="border-top: 1px dashed #000;"/>

                    <div style="margin-bottom: 3mm;">
                        <strong style="font-size: 12px;">CLIENT</strong>
                        <br/>
                        <span t-field="o.partner_id.name"/>
                        <br/>
                        Tél: <span t-field="o.partner_id.phone"/>
                        <br/>
                        Email: <span t-field="o.partner_id.email"/>
                    </div>
                    
                    <hr style="border-top: 1px dashed #000;"/>

                    <div style="margin-bottom: 3mm;">
                        <strong style="font-size: 12px;">APPAREIL DÉPOSÉ</strong>
                        <br/>
                        <span t-field="o.device_id_name" style="font-weight: bold; font-size: 14px;"/>
                        <br/>
                        N° Série: <span t-field="o.serial_number"/>
                        <br/>
                    </div>
                    
                    <div style="margin-bottom: 3mm;">
                        <strong style="font-size: 12px;">PANNES SIGNALÉES</strong>
                        <br/>
                        <t t-foreach="o.tag_ids" t-as="tag">
                            - <span t-field="tag.name"/><br/>
                        </t>
                    </div>

                    <t t-if="o.notes">
                        <div style="margin-bottom: 5mm;">
                            <strong style="font-size: 12px;">NOTES</strong>
                            <br/>
                            <span t-field="o.notes"/>
                        </div>
                    </t>

                    <t t-if="o.repair_warranty != 'aucune'">
                        <div style="text-align: center; background-color: #eee; padding: 3px; margin-bottom: 5mm; border: 1px solid #000;">
                            **GARANTIE :** <span t-field="o.repair_warranty"/>
                        </div>
                    </t>

                    <hr style="border-top: 1px dashed #000;"/>

                    <div style="text-align: center; margin-bottom: 5mm; padding-top: 5mm;">
                        <span class="m-0 p-0" t-raw="o.name" t-options='{"widget": "barcode", "symbology": "Code128", "width": 400, "height": 60}'/>
                        <br/>
                        <span style="font-size: 10px; display: block; margin-top: 1mm;">Réf. à conserver</span>
                    </div>

                    <div style="text-align: center; font-size: 10px; margin-top: 5mm;">
                        <p style="margin-bottom: 10mm;">
                            Merci de votre confiance. Nous vous contacterons pour l'établissement du devis.
                            <br/>
                            **Pensez à présenter ce bon pour le retrait de votre appareil.**
                        </p>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>