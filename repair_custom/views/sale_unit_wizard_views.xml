<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_unit_wizard_form" model="ir.ui.view">
            <field name="name">sale.unit.wizard.form</field>
            <field name="model">sale.unit.wizard</field>
            <field name="arch" type="xml">
                <form string="Ajouter un appareil">
                    <field name="sale_order_id" invisible="1"/>
                    <field name="has_available_units" invisible="1"/>
                    <group>
                        <group>
                            <field name="category_id" placeholder="Optionnel, sert à filtrer les modèles"/>
                            <field name="device_id"
                                domain="category_id and [('category_id', 'child_of', category_id)] or []"
                                options="{'no_quick_create': True}"/>
                            <field name="unit_id"
                                invisible="not has_available_units"/>
                            <field name="variant_id" placeholder="Optionnel"
                                invisible="unit_id"
                                domain="[('id', 'in', device_id.variant_ids)]"/>
                            <field name="serial_number"
                                invisible="unit_id"
                                required="not unit_id"
                                placeholder="Numéro de série (obligatoire)"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <label for="price_unit" string="Tarif"/>
                            <field name="price_unit" nolabel="1" widget="monetary" style="font-size: 22px; font-weight: 700; color: #2e8b57;"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_add_to_order"
                            string="Ajouter à la commande"
                            type="object"
                            class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
